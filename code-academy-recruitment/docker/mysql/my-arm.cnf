[mysqld]
# ARM 架构优化的 MySQL 配置
# 适用于树莓派、Apple Silicon 等 ARM 设备

# 基本设置
default-authentication-plugin=mysql_native_password
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
default-time-zone='+08:00'

# ARM 架构性能优化（相对保守的配置）
innodb_buffer_pool_size=128M          # ARM设备内存通常较小
innodb_log_file_size=32M               # 减小日志文件大小
innodb_log_buffer_size=8M              # 减小日志缓冲区
innodb_flush_log_at_trx_commit=2       # 提高写入性能
innodb_file_per_table=1
innodb_io_capacity=100                 # ARM设备IO通常较慢
innodb_io_capacity_max=200

# 连接设置（ARM设备适中配置）
max_connections=100                     # 减少最大连接数
max_connect_errors=50000
wait_timeout=300                       # 减少等待时间
interactive_timeout=300

# 查询缓存（ARM设备适中配置）
query_cache_size=32M                   # 减小查询缓存
query_cache_type=1
query_cache_limit=1M

# 线程设置
thread_cache_size=8                    # ARM设备线程缓存
table_open_cache=400                   # 减小表缓存

# 慢查询日志
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=3                      # ARM设备适当放宽慢查询时间

# 错误日志
log-error=/var/log/mysql/error.log

# 二进制日志（可选，如果不需要主从复制可以关闭以节省资源）
# log-bin=mysql-bin
# binlog_format=ROW
# expire_logs_days=3

# 安全设置
skip-name-resolve=1
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# ARM 特定优化
innodb_flush_method=O_DIRECT_NO_FSYNC  # 对 ARM 存储更友好
innodb_doublewrite=0                   # 在可靠存储上可以关闭双写缓冲

[mysql]
default-character-set=utf8mb4

[client]
default-character-set=utf8mb4