# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:43000

# API Configuration (use relative path for frontend proxy)
REACT_APP_API_URL=/api

# Database Configuration (MySQL 8.0) - 使用 root 用户简化配置
# DB_HOST=mysql  # 注释掉，使用 docker-compose 中的设置
DB_PORT=3306
DB_NAME=recruitment_db
DB_USER=root
DB_PASSWORD=root_password
DB_ROOT_PASSWORD=root_password

# 重要提示：如果您的 .env 文件中 DB_USER 不是 root，请修改为：
# DB_USER=root
# DB_PASSWORD=root_password

# Redis Configuration
# REDIS_HOST=redis  # 注释掉，使用 docker-compose 中的设置
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=Code Academy Lab <noreply@codeacademy.edu.cn>

# Email Domain Restriction
ALLOWED_EMAIL_DOMAIN=@stu.example.edu.cn

# Admin Configuration
ADMIN_EMAIL=admin@example.edu.cn
ADMIN_PASSWORD=initial_admin_password